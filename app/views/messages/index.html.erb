<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% index = 0 %>
    <% @messages.each do |message| %>
      <% index += 1 %>
      <span class="label label-info"><%= message.name %>　（ <%= message.age %>歳 ）</span>
      <%= message.body %>
      <%= link_to "編集" , edit_message_path(message), class: "label label-success" %>
      <%= link_to "削除", message, method: :delete, data: {confirm: '削除してもいいですか？'}, class: "label label-danger" %>
      
      <!--最後の行だけ「New!」を表示する。-->
      <% if index == @messages.count then %>
      <span class="label label-warning">←New!</span>
      <% end %>
      <!--New!の表示処理の終わり-->
      <br>
    <% end %>
  </div>
</div>

<% #部分テンプレートを読み込んでいる %>
<%= render 'form' %>



